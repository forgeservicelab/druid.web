}

/*
 * helper for hook_fillpdf_merge_fields_alter_alter()
 */
function _forge_web_wizard_search_for_key($value, $array) {
  foreach ($array as $key => $val) {
    if ($val['form_key'] === $value) {
      return $key;
    }
  }
  return null;
}

/*
 * recursive helper
 */
function _forge_web_wizard_recursive_array_search($needle, $haystack) { 
  static $return_arr;
  foreach($haystack as $key => $value) {
    if($needle === $key) {
      $return_arr[] = $haystack[$key][0];
    }
    elseif(is_array($value)){
      _forge_web_wizard_recursive_array_search($needle, $value);
    }
  }
  return $return_arr;
}